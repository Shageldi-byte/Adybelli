<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:id="@+id/view_foreground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@android:color/white"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <ImageView
            android:id="@+id/image"
            android:layout_width="90dp"
            android:layout_height="124dp"
            android:padding="4dp"
            android:src="@drawable/adybelli_icon"
            android:background="@drawable/stroke"
            />

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/image"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced Trainer"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    />
                <Button
                    android:id="@+id/cancelProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/orrange_stroke"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    android:text="@string/cancel"
                    android:visibility="gone"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sizeTitle"
                    android:layout_width="wrap_content"
                    android:lines="2"
                    android:layout_height="wrap_content"
                    android:text="Hakiki Deri Siyah KadÄ±n Topuklu..Razmer: Gara , 41 - Sany: 1"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    />


            </LinearLayout>

            <TextView
                android:layout_marginTop="1dp"
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sany: 1"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                />

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/old_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="974 TMT"
                    android:textColor="@color/inactive"
                    android:visibility="gone"
                    android:textSize="11sp"
                    />
                <TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="974.20 TMT"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/statusImage"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_baseline_thumb_up_alt_24"
                    app:tint="@color/colorAccent" />
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accepted"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
            </LinearLayout>



        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/image"
            android:layout_marginTop="12dp"
            android:background="@color/stroke"
            />

    </RelativeLayout>
</FrameLayout>