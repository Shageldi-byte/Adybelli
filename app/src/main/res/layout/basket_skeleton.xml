<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padd_10"
            android:src="@drawable/remove"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padd_10"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="Delete"
            android:textColor="#fff"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@android:color/white"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <View
            android:id="@+id/checkbox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@color/skeleton"
            android:layout_marginRight="2dp"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_toRightOf="@id/checkbox"
            android:padding="4dp"
            android:background="@color/skeleton"
            />

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/image"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced Trainer"
                    android:textColor="@color/skeleton"
                    android:background="@color/skeleton"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/category"
                    android:layout_toRightOf="@id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swarm Siyah erekek"
                    android:textSize="11sp"
                    android:textColor="@color/skeleton"
                    android:background="@color/skeleton"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sizeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/size_"
                    android:textColor="@color/skeleton"
                    android:background="@color/skeleton"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/size"
                    android:layout_toRightOf="@id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="39"
                    android:textSize="11sp"
                    android:textColor="@color/skeleton"
                    android:background="@color/skeleton"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/red"
                    android:layout_toRightOf="@id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="11sp"
                    android:textColor="@color/red"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery"
                    android:textColor="@color/skeleton"
                    android:background="@color/skeleton"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/date"
                    android:layout_toRightOf="@id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22.11.2020 - 31.11.2020"
                    android:textSize="11sp"
                    android:textColor="@color/skeleton"
                    android:background="@color/skeleton"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    />


            </LinearLayout>


            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/sizeBtn"
                    android:singleLine="true"
                    android:text="@string/size__"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:drawablePadding="-6dp"
                    android:textAllCaps="false"
                    android:textColor="@color/skeleton"
                    android:background="@color/skeleton"
                    android:layout_width="wrap_content"
                    android:textStyle="normal"
                    android:layout_height="30dp"/>

                <LinearLayout
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/old_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="974 TMT"
                        android:textColor="@color/skeleton"
                        android:background="@color/skeleton"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:id="@+id/cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="974.20 TMT"
                        android:textColor="@color/skeleton"
                        android:background="@color/skeleton"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/image"
            android:layout_marginTop="12dp"
            android:background="@color/stroke"
            />

    </RelativeLayout>
</FrameLayout>