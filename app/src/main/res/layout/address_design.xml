<?xml version="1.0" encoding="utf-8"?>
<com.alexandrius.accordionswipelayout.library.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/swipe_layout"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:iconSize="20dp"
    app:rightItemColors="@array/rightColors"
    app:rightItemIcons="@array/rightDrawables"
    app:swipeItemWidth="100dp"
    app:autoHideSwipe="true"
    app:onlyOneSwipe="true"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke"
        android:padding="16dp">

        <CheckBox
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/checked_icon"
            />

        <View
            android:id="@+id/line"
            android:layout_width="0.5dp"
            android:layout_height="55dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/radioButton"
            android:background="@color/stroke" />

        <LinearLayout
            android:layout_toLeftOf="@id/btns"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/line">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="#Öýüm"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="+993 65 64 63 62"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    android:singleLine="true"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 ýyl Abadançylyk mir 2 Jaý 12 otag 18"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btns"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/edit"
                />

            <ImageView
                android:id="@+id/delete"
                android:layout_marginTop="14dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/trash"
                />

        </LinearLayout>

    </RelativeLayout>

</com.alexandrius.accordionswipelayout.library.SwipeLayout>