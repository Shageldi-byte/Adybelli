<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.SelectGender">


    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/select_gender_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_gender"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            />

            <RelativeLayout
                android:id="@+id/manCon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/select_gender_active"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/man_avatar"
                    app:tint="@color/white" />


            </RelativeLayout>

        <TextView
            android:id="@+id/manTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/man"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            />



        <RelativeLayout
            android:id="@+id/womenCon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/select_gender_passive"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/women_avatar"
                app:tint="@color/white" />


        </RelativeLayout>

        <TextView
            android:id="@+id/womenTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/women"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/description"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:text="@string/save"
            />
    </LinearLayout>

</RelativeLayout>