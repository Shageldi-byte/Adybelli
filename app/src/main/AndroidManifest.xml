<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adybelli.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Application.Application"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:theme="@style/Theme.AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.CodeVerifyActivity"></activity>
        <activity android:name=".Activity.SelectGender" />
        <activity android:name=".Activity.WebViewPage" />
        <activity android:name=".Activity.ShareProductImage" />
        <activity android:name=".Activity.SearchPage"/>
        <activity
            android:name=".Activity.ProductPage"
            android:screenOrientation="portrait">
            <intent-filter android:label="https://www.adybelli.com/">
                <action android:name="com.adybelli.android.Activity.ProductPage" />
                <category android:name="android.intent.category.DEFAULT" />



                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" android:host="www.adybelli.com" />
                <data android:scheme="https" android:host="www.adybelli.com" />

            </intent-filter>

        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".Service.MyFirebaseIntanceService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>